<div class="pull-right">
  <%= link_to("Add a job", new_job_path, class: "btn btn-primary")%>
</div>
<table class="table table-boldered">
  <thead>
    <tr>
      <td>
        标题
      </td>
      <td>
        内容
      </td>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
    <tr>
      <td>
        <%= link_to(job.title, job_path(job))%>
      </td>
      <td>
        <%= job.description%>
      </td>
      <td>
        <%= link_to("Edit", edit_job_path(job))%>
        <%= link_to("Delete", job_path(job), method: :delete ,data: {confirm: "Are you sure?"})%>
      </td>
    </tr>

  </tbody>
  <% end %>
</table>
